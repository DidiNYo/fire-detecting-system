<Controls:MetroWindow x:Class="fire_preventing_system.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fire_preventing_system"
                      xmlns:xaml="clr-namespace:Mapsui.UI.Wpf;assembly=Mapsui.UI.Wpf"
                      mc:Ignorable="d"
        Title="Fire Preventing System" Height="750" Width="1150"
        BorderBrush="{DynamicResource AccentColorBrush}"
        BorderThickness="1">
   

    <Grid>
        <TabControl HorizontalAlignment="Center" Width="1100">
            <TabItem Header="Visualise Sensors" FontSize="22">
                <xaml:MapControl Name="MyMapControl"></xaml:MapControl>
            </TabItem>
            <TabItem Header="Settings" />
            <TabItem Header="Define Alarms" />
            <TabItem Header="History" />
        </TabControl>
    </Grid>
</Controls:MetroWindow>
    
