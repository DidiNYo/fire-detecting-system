<Controls:MetroWindow x:Class="fire_preventing_system.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fire_preventing_system"
        xmlns:xaml="clr-namespace:Mapsui.UI.Wpf;assembly=Mapsui.UI.Wpf"
        mc:Ignorable="d"
        Title="Fire Preventing System" 
        WindowState = "Maximized"
        WindowStyle = "None">

    <Grid>
        <!--Main Tabs-->
        <TabControl HorizontalAlignment="Stretch" Margin="5" Controls:TabControlHelper.Underlined="TabPanel">
            <TabItem Header="Visualize Sensors">
                <!--Initialize Map-->
                <xaml:MapControl Name="MainMap"></xaml:MapControl>
            </TabItem>
            <TabItem Header="Settings" />
            <TabItem Header="Define Alarms" />
            <TabItem Header="History" />
        </TabControl>
        <!--Main Tabs-->
    </Grid>
</Controls:MetroWindow>
    
