<Controls:MetroWindow x:Class="fire_detecting_system.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fire_detecting_system"
        xmlns:xaml="clr-namespace:Mapsui.UI.Wpf;assembly=Mapsui.UI.Wpf"
        mc:Ignorable="d"
        Title="Fire Preventing System" 
        WindowState = "Maximized"
        WindowStyle = "None">

    <Grid>
        <!--Main Tabs-->
        <TabControl HorizontalAlignment="Stretch" Margin="5" Controls:TabControlHelper.Underlined="TabPanel">
            <TabItem Header="Visualize Sensors" Padding="15,2">
                <!--Initialize Map-->
                <xaml:MapControl Name="MainMap"></xaml:MapControl>
            </TabItem>
            <TabItem Header="Settings" Padding="15,2">
                <Canvas>
                    <TextBox Text="{Binding Coords.YCoordinate}" Width="213" TextAlignment="Center"  FontSize="24" Name="YCoord" Canvas.Left="187" Height="43" Canvas.Top="33.5" Padding="2,0,0,0"/>
                    <TextBox Text="{Binding Coords.XCoordinate}" Width="216" TextAlignment="Center" FontSize="24" Name="XCoord" Canvas.Top="93.5" Canvas.Left="187" Height="43"/>
                    <Button Click="Btn_ClickSaveCoords" Content="Save Coords" Canvas.Left="187" Canvas.Top="152.5" Width="216" Height="43"/>
                </Canvas>
            </TabItem>
            <TabItem Header="Define Alarms" Padding="15,2"/>
            <TabItem Header="History" Padding="15,2"/>
        </TabControl>
        <!--Main Tabs-->
    </Grid>


</Controls:MetroWindow>
    
